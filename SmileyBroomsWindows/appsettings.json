{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=Data/SmileyBrooms.db"
  },
  "AppSettings": {
    "ApiBaseUrl": "https://www.smileybrooms.com/api",
    "UpdateCheckIntervalHours": 24,
    "EnableNotifications": true,
    "EnableAutoStart": true,
    "LogLevel": "Information"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "File": {
      "Path": "Logs/app.log",
      "MaxSizeMB": 10,
      "MaxFiles": 5
    }
  }
}
