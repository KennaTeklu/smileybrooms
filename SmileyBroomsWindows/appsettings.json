{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=SmileyBrooms.db"
  },
  "ApiSettings": {
    "BaseUrl": "https://www.smileybrooms.com/api/",
    "ApiKey": ""
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning"
    },
    "File": {
      "Path": "Logs/smiley-brooms.log",
      "FileSizeLimitBytes": 10485760,
      "MaxRollingFiles": 10
    }
  },
  "AppSettings": {
    "AutoStartWithWindows": false,
    "MinimizeToTray": true,
    "CheckForUpdatesOnStartup": true,
    "NotificationsEnabled": true
  }
}
