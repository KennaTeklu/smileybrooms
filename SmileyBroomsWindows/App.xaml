<Application x:Class="SmileyBroomsWindows.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Default font sizes for responsive design -->
            <System:Double x:Key="SmallScreenFontSize">16.0</System:Double>
            <System:Double x:Key="MediumScreenFontSize">20.0</System:Double>
            <System:Double x:Key="LargeScreenFontSize">28.0</System:Double>
        </ResourceDictionary>
    </Application.Resources>
</Application>
