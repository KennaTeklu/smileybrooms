<UserControl x:Class="SmileyBroomsWindows.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmileyBroomsWindows.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel>
            <!-- Hero Section -->
            <Grid Background="{DynamicResource MaterialDesignPaper}" Margin="0,0,0,40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Margin="40,60,40,40">
                    <TextBlock Text="Smiley Brooms" 
                               FontSize="18" 
                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                               TextAlignment="Center"/>
                    
                    <!-- Prominent Tagline -->
                    <TextBlock Text="You rest, we take care of the rest!" 
                               FontSize="46" 
                               FontWeight="Bold" 
                               TextAlignment="Center"
                               Margin="20,20,20,20">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#2196F3" Offset="0"/>
                                <GradientStop Color="#7C3AED" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>
                    
                    <TextBlock Text="Professional Cleaning Services" 
                               FontSize="20" 
                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                               TextAlignment="Center"/>
                    
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                Margin="0,30,0,0">
                        <Button Content="Book Now" 
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                materialDesign:ButtonAssist.CornerRadius="4"
                                Margin="0,0,10,0"
                                Command="{Binding BookNowCommand}"/>
                        <Button Content="View Services" 
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                materialDesign:ButtonAssist.CornerRadius="4"
                                Margin="10,0,0,0"
                                Command="{Binding ViewServicesCommand}"/>
                    </StackPanel>
                </StackPanel>
                
                <Image Grid.Row="1" 
                       Source="/Assets/Images/cleaning-hero.jpg" 
                       MaxHeight="400"
                       Stretch="UniformToFill"
                       Margin="0,0,0,0"/>
            </Grid>
            
            <!-- Services Section -->
            <StackPanel Margin="40,20,40,40">
                <TextBlock Text="Our Services" 
                           FontSize="28" 
                           FontWeight="Bold"
                           TextAlignment="Center"
                           Margin="0,0,0,20"/>
                
                <ItemsControl ItemsSource="{Binding Services}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <materialDesign:Card Margin="0,0,0,20" UniformCornerRadius="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Image Grid.Column="0" 
                                           Source="{Binding ImagePath}" 
                                           Width="120" 
                                           Height="120"
                                           Stretch="UniformToFill"
                                           Margin="16"/>
                                    
                                    <StackPanel Grid.Column="1" Margin="0,16,16,16">
                                        <DockPanel>
                                            <TextBlock Text="{Binding Name}" 
                                                       FontSize="20" 
                                                       FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Price, StringFormat={}${0}}" 
                                                       FontSize="16" 
                                                       FontWeight="SemiBold" 
                                                       HorizontalAlignment="Right"/>
                                        </DockPanel>
                                        
                                        <TextBlock Text="{Binding Description}" 
                                                   TextWrapping="Wrap"
                                                   Margin="0,8,0,16"/>
                                        
                                        <Button Content="Book Service" 
                                                Style="{StaticResource MaterialDesignRaisedButton}"
                                                materialDesign:ButtonAssist.CornerRadius="4"
                                                HorizontalAlignment="Left"
                                                Command="{Binding DataContext.BookServiceCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"/>
                                    </StackPanel>
                                </Grid>
                            </materialDesign:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            
            <!-- How It Works Section -->
            <StackPanel Margin="40,20,40,40">
                <TextBlock Text="How It Works" 
                           FontSize="28" 
                           FontWeight="Bold"
                           TextAlignment="Center"
                           Margin="0,0,0,20"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Step 1 -->
                    <materialDesign:Card Grid.Column="0" Margin="8" UniformCornerRadius="8">
                        <StackPanel Margin="16">
                            <Grid>
                                <Ellipse Width="60" Height="60" Fill="{DynamicResource PrimaryHueMidBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="1" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                            
                            <TextBlock Text="Book Online" 
                                       FontSize="20" 
                                       FontWeight="SemiBold"
                                       TextAlignment="Center"
                                       Margin="0,16,0,8"/>
                            
                            <TextBlock Text="Choose the service you need and select a convenient date and time."
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </materialDesign:Card>
                    
                    <!-- Step 2 -->
                    <materialDesign:Card Grid.Column="1" Margin="8" UniformCornerRadius="8">
                        <StackPanel Margin="16">
                            <Grid>
                                <Ellipse Width="60" Height="60" Fill="{DynamicResource PrimaryHueMidBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="2" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                            
                            <TextBlock Text="We Clean" 
                                       FontSize="20" 
                                       FontWeight="SemiBold"
                                       TextAlignment="Center"
                                       Margin="0,16,0,8"/>
                            
                            <TextBlock Text="Our professional team arrives and transforms your space."
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </materialDesign:Card>
                    
                    <!-- Step 3 -->
                    <materialDesign:Card Grid.Column="2" Margin="8" UniformCornerRadius="8">
                        <StackPanel Margin="16">
                            <Grid>
                                <Ellipse Width="60" Height="60" Fill="{DynamicResource PrimaryHueMidBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="3" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                            
                            <TextBlock Text="Enjoy" 
                                       FontSize="20" 
                                       FontWeight="SemiBold"
                                       TextAlignment="Center"
                                       Margin="0,16,0,8"/>
                            
                            <TextBlock Text="Relax in your freshly cleaned space and enjoy the results."
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>
            </StackPanel>
            
            <!-- Call to Action Section -->
            <materialDesign:Card Margin="40,20,40,60" UniformCornerRadius="8" Background="#EFF6FF">
                <StackPanel Margin="40">
                    <TextBlock Text="Ready for a Cleaner Home?" 
                               FontSize="28" 
                               FontWeight="Bold"
                               TextAlignment="Center"/>
                    
                    <TextBlock Text="Book your cleaning service today and experience the difference."
                               FontSize="18"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                               TextAlignment="Center"
                               Margin="0,10,0,20"/>
                    
                    <Button Content="Book Now" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="4"
                            HorizontalAlignment="Center"
                            Padding="30,15"
                            FontSize="16"
                            Command="{Binding BookNowCommand}"/>
                </StackPanel>
            </materialDesign:Card>
        </StackPanel>
    </ScrollViewer>
</UserControl>
